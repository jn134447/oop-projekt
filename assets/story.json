{
  "story": {
    "start": {
      "texts": [
        { "speaker": "narrative", "content": "There is a key on the ground..." },
        { "speaker": "player", "content": "Pick up the key?", "font_size": 40 }
      ],
      "choices": [
        {
          "text": "Pick up the key",
          "target": "pickup_key",
          "conditions": [{ "type": "has_item", "item": "rusty_key", "quantity": 0, "operation": "==" }]
        },
        { "text": "Leave it", "target": "didnt_pickup_key" }
      ]
    },
    "didnt_pickup_key": {
      "texts": [{ "speaker": "player", "content": "You ignore the key", "color": [255, 0, 0, 255], "speed": 20 }],
      "default_next": "door_open"
    },
    "pickup_key": {
      "texts": [
        {
          "content": "You picked up the rusty key",
          "font_size": 50,
          "actions": [{ "type": "give_item", "item": "rusty_key", "quantity": 1 }]
        },
        { "content": "It feels cold on touch" }
      ],
      "default_next": "door_open"
    },
    "door_open": {
      "texts": [{ "speaker": "narrative", "content": "The door STANDS before you" }],
      "choices": [
        {
          "text": "Open the door",
          "target": "inside_room",
          "conditions": [{ "type": "item", "quantity": "1", "operation": ">=" }]
        },
        { "text": "Go back to the key", "target": "start" }
      ]
    },
    "inside_room": {
      "texts": [{ "speaker": "room_narrative", "content": "The room is dark and cold." }],
      "choices": [{ "text": "go back", "target": "door_open" }]
    }
  }
}
