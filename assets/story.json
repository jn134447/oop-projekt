      { "speaker": "narrative", "text": "There is a key on the ground..." },
      { "speaker": "player", "text": "Pick up the key", "font_size": 40 }
    ],
    "choices": [
      { "text": "Pick up the key", "target": "pickup_key" },
      { "text": "Leave it", "target": "didnt_pickup_key" }
    ]
  },
  "didnt_pickup_key": {
    "texts": [{ "speaker": "player", "text": "You ignore the key" }],
    "default_next": "door_open"
  },
  "pickup_key": {
    "texts": [{ "speaker": "player", "text": "You picked up the key" }],
    "default_next": "door_open",
    "actions": [{ "give_item": "rusty_key" }]
  },
  "door_open": {
    "texts": [{ "speaker": "narrative", "text": "The door STANDS before you" }],
    "choices": [
      { "text": "Open the door", "target": "inside_room" },
      { "text": "Go back to the key", "target": "start" }
    ]
  },
  "inside_room": {
    "texts": [{ "speaker": "narrative", "text": "The room is dark and cold." }],
    "choices": [{ "text": "go back", "target": "door_open" }]
  }
