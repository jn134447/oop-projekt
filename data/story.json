{
  "story": {
    "start": {
      "texts": [
        { "speaker": "title", "content": "=== ENGINE SHOWCASE ===" },
        { "speaker": "sub_title", "content": "Pick a module to showcase." }
      ],
      "choices": [
        { "text": "Showcase Dialogue", "target": "sc_dialogue" },
        { "text": "Showcase Items", "target": "sc_items" },
        { "text": "Showcase Status Effects", "target": "sc_effects" },
        { "text": "Showcase Variables", "target": "sc_variables" },
        { "text": "Showcase Flags", "target": "sc_flags" }
      ]
    },
    "sc_dialogue": {
      "texts": [
        { "content": "Default text" },
        { "content": "Default text with font color change", "color": [0, 200, 100] },
        { "content": "Default text with font size change", "font_size": 30 },
        { "content": "Default text with speed change", "speed": 40 }
      ],
      "default_next": "sc_dialogue_2"
    },
    "sc_dialogue_2": {
      "texts": [
        { "speaker": "dialogue_2", "content": "Speaker \"dialogue_2\" text" },
        { "speaker": "dialogue_2", "content": "Speaker text with font color change", "color": [0, 200, 100] },
        { "speaker": "dialogue_2", "content": "Speaker text with font size change", "font_size": 30 },
        { "speaker": "dialogue_2", "content": "Speaker text with speed change", "speed": 40 }
      ],
      "default_next": "start"
    },
    "sc_items": {
      "texts": [
        { "content": "Giving a coin", "actions": [{ "type": "modify_item", "item": "coin" }] },
        { "content": "Giving 22 coins", "actions": [{ "type": "modify_item", "item": "coin", "amount": 22 }] },
        { "content": "Giving an apple", "actions": [{ "type": "modify_item", "item": "apple" }] },
        { "content": "Removing all coins", "actions": [{ "type": "modify_item", "item": "coin", "amount": -99 }] }
      ],
      "choices": [
        {
          "text": "Use the apple",
          "target": "src_items_apple",
          "conditions": [{ "type": "has_item", "item": "apple" }]
        },
        {
          "text": "Dont use the apple",
          "target": "src_items_no_apple",
          "conditions": [{ "type": "has_item", "item": "apple", "comparison": "!=" }]
        }
      ]
    },
    "src_items_no_apple": {
      "texts": [{ "content": "Apple not used, going back" }],
      "default_next": "start"
    },
    "src_items_apple": {
      "texts": [
        { "content": "Apple used, going back", "actions": [{ "type": "modify_item", "item": "apple", "amount": -1 }] }
      ],
      "default_next": "start"
    },
    "sc_effects": {
      "texts": [
        { "content": "Inflicting sadness", "actions": [{ "type": "modify_effect", "effect": "sad" }] },
        {
          "content": "Inflicting more sadness",
          "actions": [{ "type": "modify_effect", "effect": "sad", "amount": 3 }]
        },
        { "content": "Inflicting happines", "actions": [{ "type": "modify_effect", "effect": "happy" }] },
        { "content": "Clearing sadness", "actions": [{ "type": "modify_effect", "effect": "sad", "amount": -99 }] }
      ],
      "choices": [
        {
          "text": "Have happines",
          "target": "start",
          "conditions": [{ "type": "has_effect", "effect": "happy" }]
        },
        {
          "text": "Don't have happines",
          "target": "start",
          "conditions": [{ "type": "has_effect", "effect": "happy", "comparison": "!=" }]
        }
      ]
    },
    "sc_variables": {
      "texts": [
        { "content": "Variables are hidden from the player" },
        {
          "content": "Adding karma on top of the default amount",
          "actions": [{ "type": "modify_variable", "variable": "karma", "amount": 10 }]
        },
        {
          "content": "Setting karma to 40",
          "actions": [{ "type": "set_variable", "variable": "karma", "amount": 40 }]
        },
        {
          "content": "Modifying mind by -25",
          "actions": [{ "type": "modify_variable", "variable": "mind", "amount": -25 }]
        }
      ],
      "choices": [
        {
          "text": "Have below 75 mind and 40 karma",
          "target": "start",
          "conditions": [
            { "type": "variable_compare", "variable": "karma", "amount": 40, "comparison": "==" },
            { "type": "variable_compare", "variable": "mind", "amount": 75, "comparison": "<" }
          ]
        },
        {
          "text": "Have above or and 75 mind and 40 karma",
          "target": "start",
          "conditions": [
            { "type": "variable_compare", "variable": "karma", "amount": 40, "comparison": "==" },
            { "type": "variable_compare", "variable": "mind", "amount": 75, "comparison": ">=" }
          ]
        },
        {
          "text": "Have above or and 75 mind and no karma",
          "target": "start",
          "conditions": [
            { "type": "variable_compare", "variable": "karma", "comparison": "==" },
            { "type": "variable_compare", "variable": "mind", "amount": 75, "comparison": ">=" }
          ]
        }
      ]
    },
    "sc_flags": {
      "texts": [
        { "content": "dfalse_flag is defaulted to false" },
        { "content": "dtrue_flag is defaulted to true" }
      ],
      "choices": [
        {
          "text": "dfalse_f == false",
          "target": "sc_flags_df_choice",
          "conditions": [{ "type": "flag_set", "flag": "dfalse_flag", "value": false }]
        },
        {
          "text": "dfalse_f == true",
          "target": "sc_flags_df_choice",
          "conditions": [{ "type": "flag_set", "flag": "dfalse_flag" }]
        },
        {
          "text": "dtrue_f == false",
          "target": "sc_flags_df_choice",
          "conditions": [{ "type": "flag_set", "flag": "dtrue_flag", "value": false }]
        },
        {
          "text": "dtrue_f == true",
          "target": "sc_flags_df_choice",
          "conditions": [{ "type": "flag_set", "flag": "dtrue_flag" }]
        }
      ]
    },
    "sc_flags_df_choice": {
      "texts": [
        {
          "content": "Flag dfalse_flag set to true",
          "actions": [{ "type": "set_flag", "flag": "dfalse_flag" }]
        },
        {
          "content": "Flag dtrue_flag set to false",
          "actions": [{ "type": "set_flag", "flag": "dtrue_flag", "value": false }]
        }
      ],
      "default_next": "start"
    }
  }
}
